    <!-- initialize tooltips -->
    
    <script language="javascript" type="text/javascript">
        $(document).ready(function () {
            $('.hasTooltip').qtip({
                content: {
                    attr: 'title',
                    title: function(api) {
			            // Retrieve content from custom attribute of the elements.
			            return $(this).attr('rel');
		            },
			        style: {
			            classes: 'ui-tooltip-blue ui-tooltip-shadow'
			        }
                }
            });
        });
